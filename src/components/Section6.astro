---
import { getSection } from "../utils/sanity";

const section6Left = await getSection("section-6-left");
const section6RightNW = await getSection("section-6-right-nw");
const section6RightNE = await getSection("section-6-right-ne");
const section6RightSE = await getSection("section-6-right-se");
const section6RightSW = await getSection("section-6-right-sw");
---

<section class="bg-gray-300">
  <div class="container section-spacing text-white">
    <div class="md:w-1/3 flex flex-col gap-8 justify-center">
      <h3 class="heading text-3xl text-white">
        {section6Left?.heading}
      </h3>
      <p class="copy">
        {section6Left?.subheading}
      </p>
    </div>
    <div class="md:w-2/3">
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <div class="flex gap-4">
            <div class="icon icon-basic-lightbulb"></div>
            <div class="flex-col gap-4">
              <h3 class="heading text-lg text-white">
                {section6RightNW?.heading}
              </h3>
              <h4 class="thin-heading text-sm text-white">
                {section6RightNW?.subheading}
              </h4>
            </div>
          </div>
        </div>
        <div>
          <div class="flex gap-4">
            <div class="icon icon-basic-gear"></div>
            <div class="flex-col gap-4">
              <h3 class="heading text-lg text-white">
                {section6RightNE?.heading}
              </h3>
              <h4 class="thin-heading text-sm text-white">
                {section6RightNE?.subheading}
              </h4>
            </div>
          </div>
        </div>
        <div>
          <div class="flex gap-4">
            <div class="icon icon-basic-laptop"></div>
            <div class="flex-col gap-4">
              <h3 class="heading text-lg text-white">
                {section6RightSE?.heading}
              </h3>
              <h4 class="thin-heading text-sm text-white">
                {section6RightSE?.subheading}
              </h4>
            </div>
          </div>
        </div>
        <div>
          <div class="flex gap-4">
            <div class="icon icon-basic-paperplane"></div>
            <div class="flex-col gap-4">
              <h3 class="heading text-lg text-white">
                {section6RightSW?.heading}
              </h3>
              <h4 class="thin-heading text-sm text-white">
                {section6RightSW?.subheading}
              </h4>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
