---
import { getSection } from "../utils/sanity";

const section7Person1 = await getSection("section-7-person-1");
const section7Person2 = await getSection("section-7-person-2");
const section7Person3 = await getSection("section-7-person-3");
---

<section class="pt-20">
  <div class="container md:flex-col">
    <div class="w-full">
      <h3 class="heading text-3xl">
        <span class="font-light">Our</span> Team
      </h3>
    </div>

    <div class="w-full grid md:grid-cols-3 gap-12">
      <div>
        <div class="bg-gray-600 h-[380px]"></div>
        <div class="py-6 flex flex-col items-center">
          <h3 class="heading text-base">{section7Person1?.heading}</h3>
          <p class="copy uppercase">{section7Person1?.subheading}</p>
        </div>
      </div>
      <div>
        <div class="bg-gray-600 h-[380px]"></div>
        <div class="py-6 flex flex-col items-center">
          <h3 class="heading text-base">{section7Person2?.heading}</h3>
          <p class="copy uppercase">{section7Person2?.subheading}</p>
        </div>
      </div>
      <div>
        <div class="bg-gray-600 h-[380px]"></div>
        <div class="py-6 flex flex-col items-center">
          <h3 class="heading text-base">{section7Person3?.heading}</h3>
          <p class="copy uppercase">{section7Person3?.subheading}</p>
        </div>
      </div>
    </div>
  </div>
</section>
